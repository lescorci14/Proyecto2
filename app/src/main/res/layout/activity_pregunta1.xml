<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pregunta1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cuc.elegir.Pregunta1"
    android:background="@drawable/z">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/pregunta1"
            android:layout_width="match_parent"
            android:id="@+id/textView8"
            android:textSize="30sp"
            android:textColor="@android:color/background_dark"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textStyle="normal|bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="0.03">

            <RadioButton
                android:text="@string/otro_pais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton"
                android:textSize="25sp"
                android:focusable="false"
                android:checked="false"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp" />

            <RadioButton
                android:text="@string/a_otra_ciudad_en_mi_pais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:textSize="25sp"
                android:focusable="false"
                android:checked="false"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp" />

        </RadioGroup>

        <Button
            android:text="@string/siguiente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_marginTop="50sp"
            android:layout_weight="0.08"
            android:textSize="20sp"
            android:background="@android:color/black"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|italic"
            android:onClick="aPregunta2" />

        <TextView
            android:text="@string/respuestas_noobligatorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="18sp"
            android:textColor="@android:color/background_dark"
            android:layout_marginTop="10sp"
            android:gravity="end"
            android:textAlignment="center" />

    </LinearLayout>

</RelativeLayout>
